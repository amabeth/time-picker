{
  "name": "@amabeth/time-picker",
  "version": "1.0.4",
  "description": "A React Native time picker based on @amabeth/repeating-wheel-picker",
  "main": "./lib/module/index.js",
  "types": "./lib/typescript/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/typescript/src/index.d.ts",
      "default": "./lib/module/index.js",
      "example": "./example/index.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "example": "cd example & npm start",
    "test": "jest",
    "typecheck": "tsc",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli lib",
    "prepare": "bob build & husky",
    "docs": "typedoc",
    "release": "release-it --only-version"
  },
  "keywords": [
    "react-native",
    "expo",
    "ios",
    "android",
    "time-picker",
    "time",
    "picker"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amabeth/time-picker.git"
  },
  "author": "amabeth <amabeth.dev@gmail.com> (https://github.com/amabeth)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/amabeth/time-picker/issues"
  },
  "homepage": "https://amabeth.github.io/time-picker",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@amabeth/repeating-wheel-picker": "^1.1.0",
    "react-native-modal": "^14.0.0-rc.1"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/compat": "^1.3.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.30.1",
    "@react-native/babel-preset": "^0.80.1",
    "@react-native/eslint-config": "^0.80.1",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.0.14",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "commitlint": "^19.8.1",
    "del-cli": "^6.0.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-ft-flow": "^3.0.11",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react-native": "^5.0.0",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "react-native-builder-bob": "^0.40.12",
    "release-it": "^19.0.3",
    "typedoc-github-theme": "^0.3.0",
    "typedoc-plugin-coverage": "^4.0.1",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "react": "19.0.0",
    "react-native": "0.79.5"
  },
  "overrides": {
    "@react-native/eslint-config": {
      "eslint": "$eslint"
    }
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@3.6.1",
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "create-react-native-library": {
    "languages": "js",
    "type": "library",
    "version": "0.51.1"
  },
  "typedocOptions": {
    "entryPoints": [
      "./src/index.ts"
    ],
    "projectDocuments": [
      "*.md"
    ],
    "sort": [
      "source-order"
    ],
    "plugin": [
      "typedoc-plugin-coverage",
      "typedoc-github-theme"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}
